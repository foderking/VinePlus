@page "{user}/{p=1}"
@using ComicVine.API.Pages
@model ComicVine.API.Pages.Profile.Threads

@{
    Layout = "Shared/_ProfileLayout";
    ViewData[Util.TitleKey] = $"{Model.UserName}'s Threads";
    ViewData[Util.SiteKey ] = Util.Profile.IsThread;
    ViewData[Util.Profile.ProfileKey] = Model.UserName;
}

@await Html.PartialAsync("Shared/Components/Navigation", (Model.NavRecord, Model.PageDelegate()))
@await Html.PartialAsync("Shared/Components/ForumItems", (Model.Entities , Model.GetThreadLink()))
@await Html.PartialAsync("Shared/Components/Navigation", (Model.NavRecord, Model.PageDelegate()))
