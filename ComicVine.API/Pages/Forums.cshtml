@page "{p=1}"
@model ComicVine.API.Pages.Forums

@{
    Layout= "Shared/_Layout";
    ViewData["title"] = "Recent Topics";
    ViewData["highlight"] = "vine";
}

<div id="thread">
    <h1 class="heading">Recent discussions on Vine</h1>
    <div id="thread-container">
        <table>
            <thead>
            <tr>
                <td>#</td>
                <td>Id</td>
                <td>Title</td>
                <td>Board</td>
                <td>Creator</td>
                <td>Views</td>
            </tr>
            </thead>
            <tbody>
            @if (Model.Threads != null) {
                @foreach (var (index, thread) in Model.Threads.Select((t, i) => (i,t)) ) {
                    <tr>
                        <td>@index</td>
                        <td>@thread.Id</td>
                        <td><a href="@Url.Content($"/thread?p=1&path={thread.Thread.Link}")">
                            @Html.Raw(Model.GetLock(thread.IsLocked))
                            @Html.Raw(Model.GetPin(thread.IsPinned))
                            @thread.Thread.Text
                        </a></td>
                        <td>@thread.Board.Text</td>
                        <td>@thread.Creator.Text</td>
                        <td>@thread.TotalView</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>