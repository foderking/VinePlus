@page "{user}/{p=1}"
@using VinePlus.Web.Pages
@model VinePlus.Web.Pages.Profile.Threads

@{
    Layout = "Shared/_ProfileLayout";
    ViewData[Keys.Title]        = $"{Model.UserName}'s Threads";
    ViewData[Keys.Highlight]    = ProfileHighlight.Threads;
    ViewData[Keys.ProfileName]  = Model.UserName;
}

@await Html.PartialAsync("Shared/Components/Navigation", (Model.NavRecord, Model.PageDelegate()))
@await Html.PartialAsync("Shared/Components/ForumItems", (Model.Entities , Model.GetThreadLink()))
@await Html.PartialAsync("Shared/Components/Navigation", (Model.NavRecord, Model.PageDelegate()))
